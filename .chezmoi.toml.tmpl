{{- $private := false  -}}
{{- if or (stat (joinPath .chezmoi.homeDir ".config/chezmoi.age")) (stat (joinPath .chezmoi.homeDir "chezmoi.age")) -}}
{{-   $private = true  -}}
{{- end -}}

{{- $email := " " -}}
{{- $name := "Victor Chu" -}}

{{-   if stdinIsATTY -}}
{{-     $email = promptString "email" " " -}}
{{-     $name = promptString "name" "Victor Chu" -}}
{{-   end -}}

{{- if $private -}}
encryption = "age"
[age]
  identity = "~/.config/chezmoi.age"
  recipient = "age1myfxv62zvx85n04v755glrxyz5gckjxn0w9shd5m70s03wtcd43qf0mqcl"
{{- end }}

umask = 0o22

[edit]
  watch = true

[[textconv]]
pattern = "**/*.plist"
command = "plutil"
args = ["-convert", "xml1", "-o", "-", "-"]

[git]
  autoadd = true
  autoCommit = false
  autopush = false

[data]
  private = {{ $private }}
  email = "{{ $email }}"
  name = "{{ $name }}"
