export COPYFILE_DISABLE=true
# remove macOS zsh warning
export BASH_SILENCE_DEPRECATION_WARNING=1

# Homebrew
if [ -x /opt/homebrew/bin/brew ]; then
  export HOMEBREW_PREFIX="/opt/homebrew"
  export HOMEBREW_CELLAR="/opt/homebrew/Cellar"
  export HOMEBREW_REPOSITORY="/opt/homebrew"
  export HOMEBREW_CASK_OPTS="--no-quarantine"
  [ -d /opt/homebrew/bin ] && PATH="/opt/homebrew/bin:$PATH"
  [ -d /opt/homebrew/sbin ] && PATH="/opt/homebrew/sbin:$PATH"
  [ -d /opt/homebrew/share/man ] && MANPATH="/opt/homebrew/share/man:$MANPATH"
  [ -d /opt/homebrew/share/info ] && INFOPATH="$INFOPATH:/opt/homebrew/share/info"
fi

# ~/Library/Python/*/bin
for pyver in "$HOME"/Library/Python/*; do
  [ -d "$pyver/bin" ] && PATH="$PATH:$pyver/bin"
done
unset pyver

export PATH
export MANPATH
export INFOPATH

umask 0022