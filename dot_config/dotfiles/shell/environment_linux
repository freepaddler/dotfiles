if [ -n "$PS1" ]; then
    PS1="\n\$([ \$(id -u) -eq 0 ] && printf \"\[\033[1;31m\]\" || printf \"\[\033[1;32m\]\")\u\$([ -z \"\$TMUX\" ] && [ -n \"\$SSH_TTY\" ] && printf \"\[\033[0m\033[1;37m\]@\[\033[0m\033[0;33m\]\h\") \[\033[0;36m\]\w\[\033[0m\]\n\$([ \$(id -u) -eq 0 ] && printf \"\[\033[1;31m\]#\[\033[0m\]\" || printf \"\[\033[1;32m\]$\[\033[0m\]\") "
    PS2="\[\033[1;33m\]-> \[\033[0m\]"

    export PS2 SUDO_PS1="$PS1"
fi