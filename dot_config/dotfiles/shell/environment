umask 0002

if [ -n "$PS1" ]; then
    PS1="\u@\h \w \\$ "
    PS2="-> "

    export PS2 SUDO_PS1="$PS1"
fi

# --- Editor/Visual setup with vi/vim logic ---
if command -v vim >/dev/null 2>&1; then
    export EDITOR="vim -X"
    export VISUAL="vim -X"
    alias vi="vim -X"
elif command -v vi >/dev/null 2>&1; then
    export EDITOR="vi"
    export VISUAL="vi"
    alias vi="vi"
else
    echo "ERROR: vi or vim are not found!"
fi
alias v="vi"
